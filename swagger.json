      "post": {
        "summary": "Create user object",
        "tags": [
          "Create user"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "user",
            "required": true,
            "description": "Create user",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User created.",
            "schema": {
              "type": "object",
              "example": {
                "role": "new user",
                "name": "new user"
              }
            }
          },
          "401": {
            "description": "Credentials are wrong.",
            "schema": {
              "$ref": "#/definitions/401"
            }
          }
        }
      }
    },
    "/user/login": {
      "get": {
        "summary": "User login",
        "tags": [
          "User sign in"
        ],
        "parameters": [{
          "in": "body",
          "name": "user",
          "required": true,
          "description": "User login",
            "schema": {
              "$ref": "#/definitions/LogIn"
            }
        }],
        "responses": {
          "200": {
            "description": "User logged in",
            "schema": {
              "type": "object",
              "example": {
                "role": "user login",
                "name": "user login"
              }
            }
          }
        }
      }
    }
  },
