        "password": {
          "type": "string"
        }
      }
    },
    "ToDo": {
      "required": [
        "title"
      ],
      "properties": {
        "title": {
          "type": "string"
        },
        "project": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "createdAt": {
          "type": "object"
        },
        "startedAt": {
          "type": "object"
        },
        "finishedAt": {
          "type": "object"
        },
        "state": {
          "type": "string"
        },
        "deleted": {
          "type": "boolean"
        }
      }
    },
    "LogIn": {
      "properties": {
